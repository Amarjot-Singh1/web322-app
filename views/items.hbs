<!-- Items.hbs -->
<div class="row">
    <div class="col-md-12">
        <h2>Items
             <a href="/Items/add" class="btn btn-success pull-right">Add Post</a>
        </h2>
        <hr />
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Item ID</th>
                        <th>Title</th>
                        <th>Post Date</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th>Published</th>
                        <th></th> <!-- empty header for delete buttons -->
                    </tr>
                </thead>
                <tbody>
                    {{#each items}}
                        <tr>
                            <td>{{this.id}}</td>
                            <td>{{this.title}}</td>
                            <td>{{#formatDate this.postDate}}{{/formatDate}}</td>
                            <td>{{this.price}}</td>
                            <td><a href="/items?category={{this.category.id}}">{{this.category.name}}</a></td>
                            <td>{{this.published}}</td>
                            <td>
                                <a href="/Items/delete/{{this.id}}" class="btn btn-danger">remove</a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
{{#unless items}}
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>
{{/unless}}
